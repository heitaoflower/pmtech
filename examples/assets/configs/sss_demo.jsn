{
    include: [
        common.jsn,
        post_process.jsn,
        editor_renderer.jsn
    ],
                
    views:
    {
        single_shadow_view:
        {
            target             : [shadow_map],
            clear_depth        : 1.0,
            colour_write_mask  : 0xf,
            blend_state        : disabled,
            viewport           : [0.0, 0.0, 1.0, 1.0],
            raster_state       : post_process,
            depth_stencil_state: default,
            pmfx_shader        : forward_render,
            technique          : zonly,
            scene              : main_scene,
            scene_views        : ["ces_render_shadow_maps"],
            render_flags       : ["shadow_map"]
        },
        
        sss_main:
        {
            inherit        : "main_view_post_processed",
            clear_colour   : [0.0, 0.0, 0.0, 1.0],
            clear_depth    : 1.0,
            post_process   : pp_sss,
            
            sampler_bindings:
            [
                { texture: shadow_map, unit: 15, state: wrap_linear, shader: ps },
                { texture: area_light_textures, unit: 11, state: clamp_linear, shader: ps },
                { texture: omni_shadow_map, unit: 10, state: clamp_linear, shader: ps }
            ],
        }
    },
    
    post_process_sets:
    {
        pp_sss:
        {
            chain: [
                sss_reflectance,
                blit_post_process
            ]
        } 
    },
        
    
    view_sets: 
    {
        sss_view: [
            single_shadow_view,
            sss_main
        ]
    },
    
    view_set: sss_view
}
